<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 mt-3">
            <h1 class="text-center">Contato</h1>
            <p class="text-center lead">Crie ou edite seu contato abaixo</p>

            <%- include('includes/messages') %>

            <% if(contato._id) { %>
            <form class="form-contato" action="/contato/edit/<%= contato._id %>" method="POST">
            <% } else { %>
            <form class="form-contato" action="/contato/register" method="POST">
            <% } %>
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="mb-3">
                    <label class="form-label">Nome</label>
                    <input value="<%= contato.nome %>" class="w-100" type="text" name="nome">
                </div>
                <div class="mb-3">
                    <label class="form-label">Sobrenome</label>
                    <input value="<%= contato.sobrenome %>" class="w-100" type="text" name="sobrenome">
                </div>
                <div class="mb-3">
                    <label class="form-label">E-mail</label>
                    <input value="<%= contato.email %>" class="w-100" type="email" name="email">
                </div>
                <div class="mb-3">
                    <label class="form-label">Telefone</label>
                    <input value="<%= contato.telefone %>" class="w-100" type="tel" name="telefone">
                </div>
                <button  type="submit" class="btn btn-primary w-100">Salvar</button>
            </form>

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>
